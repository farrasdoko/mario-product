<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_mario"
            android:layout_width="432px"
            android:layout_height="538px"
            android:src="@drawable/mario_example"/>

        <TextView
            android:id="@+id/txt_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series: Super Smash Bros."
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_game"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Mario"/>
        <TextView
            android:id="@+id/txt_type"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Figure"/>

    </LinearLayout>

</android.support.v7.widget.CardView>